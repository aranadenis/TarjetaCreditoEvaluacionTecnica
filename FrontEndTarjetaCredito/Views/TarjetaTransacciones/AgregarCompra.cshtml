@model FrontEndTarjetaCredito.Models.CompraViewModel

@{
    ViewBag.Title = "Agregar Compra";
}

<h2>Agregar Compra</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<form asp-action="AgregarCompra" asp-controller="TarjetaTransacciones" method="post">
    <input type="hidden" asp-for="TarjetaID" />

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" type="text" required />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Monto"></label>
        <input asp-for="Monto" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaCompra"></label>
        <input asp-for="FechaCompra" class="form-control" type="date" value="@Model.FechaCompra.ToString("dd-MM-yyyy")" required />
        <span asp-validation-for="FechaCompra" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


