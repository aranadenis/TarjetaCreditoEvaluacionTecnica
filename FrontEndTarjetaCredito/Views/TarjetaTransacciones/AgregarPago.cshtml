@model FrontEndTarjetaCredito.Models.PagoViewModel

@{
    ViewBag.Title = "Agregar Pago";
}

<h2>Agregar Pago</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<form asp-action="AgregarPago" asp-controller="TarjetaTransacciones" method="post">
    <input type="hidden" asp-for="TarjetaID" />

    <div class="form-group">
        <label asp-for="Monto"></label>
        <input asp-for="Monto" class="form-control" type="number" step="0.01" required />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FechaPago"></label>
        <input asp-for="FechaPago" class="form-control" type="date" value="@Model.FechaPago.ToString("dd-MM-yyyy")" required />
        <span asp-validation-for="FechaPago" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
